@{
    ViewData["Title"] = "Update";
}
@model SubCategoryUpdateDto
<div>
    <div class="d-flex mb-2 justify-content-end">
        <a asp-action="Index" asp-controller="SubCategory" class="btn btn-primary ">Return SubCategories</a>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title justify-content-center">Update SubCategory</h4>
            </div>
            <div class="card-body">
                <form asp-action="update" asp-controller="SubCategory">
                    <div class="mb-3">
                        <label class="form-label" asp-for="Name">SubCategory name</label>
                        <input type="text" class="form-control" asp-for="Name" id="formrow-firstname-input">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Select Category *</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
                        <span class="spanText text-danger " asp-validation-for="@Model.CategoryId"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-md">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>



