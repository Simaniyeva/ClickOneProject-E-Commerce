@{
    ViewData["Title"] = "Create";
}
@model ColorPostDto
<div>
    <div class="d-flex mb-2 justify-content-end">
        <a asp-action="Index" asp-controller="Color" class="btn btn-primary ">Return Colors</a>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title justify-content-center">Create Color</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" asp-controller="Color">
                    <div class="mb-3">
                        <label class="form-label" asp-for="Name">Color name</label>
                        <input type="text" class="form-control" asp-for="Name" id="formrow-firstname-input" placeholder="Enter Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-md">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>



